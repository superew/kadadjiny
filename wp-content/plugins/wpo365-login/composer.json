    "psr-4": {
      "Wpo\\": "",
      "Wpo\\Blocks\\": "Blocks",
      "Wpo\\Core\\": "Core",
      "Wpo\\Firebase\\": "Firebase/JWT",
      "Wpo\\Graph\\": "Graph",
      "Wpo\\Insights\\": "Insights",
